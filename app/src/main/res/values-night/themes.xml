<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoAcuerdate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="background">?attr/colorPrimary</item>
    </style>
    <style name="BottomNavigationStyle">
        <item name="android:background">@drawable/gradient_bottom_nav_theme_black</item>
        <item name="itemIconTint">@color/nv_tab_item_foreground_theme_black</item>
        <item name="itemTextColor">@color/nv_tab_item_foreground_theme_black</item>
    </style>
    <style name="textcolor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="itemTextColor">@color/text_color_theme_black</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_color_app_theme_white</item>
<!--&lt;!&ndash;        <item name="windowSplashScreenBackground">@null</item>&ndash;&gt;-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_app</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.AutoAcuerdate</item>
<!--&lt;!&ndash;        <item name="android:windowSplashScreenBrandingImage">@drawable/logo_app</item>&ndash;&gt;-->
    </style>
</resources>