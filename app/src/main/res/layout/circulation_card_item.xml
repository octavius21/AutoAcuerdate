<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    style="@style/containersCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Licencia de Conducir"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <TextView
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Type"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                android:id="@+id/tvTypeCard"
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/md_theme_light_onSurface"
                tools:text="A" />

            <TextView
                android:id="@+id/tvTypeBlood"
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="O+" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="10"
                android:text="Name"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="RFC"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                android:id="@+id/tvItin"
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="HDFS960321E34" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNameOfTheCard"
            style="@style/TextCardItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textAppearance="?attr/textAppearanceBody2"
            tools:text="Juan Perez Aguado Perrusquia Delgado" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Expedition"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Vigency"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Nacionality"
                android:textAppearance="?attr/textAppearanceBody2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvExpeditionCard"
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="29/04/2022" />

            <TextView
                android:id="@+id/tvVigencyCard"
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="29/04/2025" />

            <TextView
                android:id="@+id/tvNacionalityCard"
                style="@style/TextCardItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="MEXICANA" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Edit" />
<!--            style="?attr/borderlessButtonStyle"-->
            <com.google.android.material.button.MaterialButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete" />
        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>