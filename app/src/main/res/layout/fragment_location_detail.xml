<!--                android:layout_height="100dp"-->
<!--                tools:context=".views.fragments.fragment_location_detail"/>-->
            <TextView
                android:id="@+id/tvCoordinatesLatitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textcolorBody"
                tools:text="Coordinates latitude: 10.15641681"/>
            <TextView
                android:id="@+id/tvCoordinatesLongitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textcolorBody"
                tools:text="Coordinates longitude: -99.454641641"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>