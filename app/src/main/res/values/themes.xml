<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoAcuerdate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">@drawable/gradient_bottom_nav_theme_white</item>
        <item name="itemIconTint">@color/nv_tab_item_foreground_theme_white</item>
        <item name="itemTextColor">@color/nv_tab_item_foreground_theme_white</item>
    </style>
    <style name="textcolorH1">
        <item name="android:textColor">@color/text_color_theme_white</item>
        <item name="android:textSize">96sp</item>
    </style>
    <style name="textcolorH2">
        <item name="android:textColor">@color/text_color_theme_white</item>
        <item name="android:textSize">60sp</item>
    </style>
    <style name="textcolorH3">
        <item name="android:textColor">@color/text_color_theme_white</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="textcolorH4">
        <item name="android:textColor">@color/text_color_theme_white</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="textcolorH5">
        <item name="android:textColor">@color/text_color_theme_white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="textcolorH6">
        <item name="android:textColor">@color/text_color_theme_white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textcolorSubtitle">
        <item name="android:textColor">@color/text_color_theme_white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textcolorBody">
        <item name="android:textColor">@color/text_color_theme_white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textButton">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textcolorOverline">
        <item name="android:textColor">@color/text_color_theme_white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_plate_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/color_plate_red</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.AutoAcuerdate</item>
    </style>
</resources>