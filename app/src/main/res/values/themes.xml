    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <!--        <item name="background">?attr/colorPrimary</item>-->
        <!--        <item name="backgroundTint">@color/md_theme_light_surface</item>-->
        <item name="elevation">3dp</item>
        <!--        <item name="navigationIconTint">@color/md_theme_light_surfaceTint</item>-->
    </style>
    <!--Color de la barra de BottomNavigation-->
    <style name="BottomNavigationStyle">
        <item name="android:background">@drawable/gradient_bottom_nav_theme_white</item>
        <item name="itemIconTint">@color/nv_tab_item_foreground_theme_white</item>
        <item name="itemTextColor">@color/nv_tab_item_foreground_theme_white</item>
    </style>
    <!--    Containers-->
    <!--    Container Cars-->
    <style name="containersCar">
        <item name="android:background">@color/md_theme_light_primaryContainer</item>
        <item name="android:elevation">1dp</item>
        <item name="android:outlineProvider">background</item>
    </style>
    <style name="containerTextInputCarAdd" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_theme_light_outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/md_theme_light_error</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="startIconTint">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:hint">Enter Your plate</item>
        <item name="android:textColorHint">@color/md_theme_light_onSurfaceVariant</item>
        <item name="hintTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="endIconTint">@color/md_theme_light_onSurfaceVariant</item>
        <item name="errorIconTint">@color/md_theme_light_error</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperText">Enter Your plate</item>
        <item name="helperTextTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/md_theme_light_error</item>
    </style>
    <!--        Container Cards-->
    <style name="containersCard">
        <item name="android:background">@color/md_theme_light_secondaryContainer</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:state_pressed">true</item>
        <item name="elevation">1dp</item>
        <item name="rippleColor">@color/md_theme_light_surfaceTint</item>
        <item name="borderWidth">1dp</item>
        <item name="backgroundTint">@color/md_theme_light_surfaceTint</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="strokeColor">@color/md_theme_light_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TextCardItem">
        <item name="android:textColor">@color/md_theme_light_onSecondaryContainer</item>
    </style>

    <style name="ButtonCardItem">
        <item name="android:backgroundTint">@color/md_theme_light_primaryContainer</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="elevation">3dp</item>
        <item name="rippleColor">@color/md_theme_light_surfaceTint</item>
        <item name="hoveredFocusedTranslationZ">1dp</item>
    </style>
    <!--    Container Image-->
    <style name="containersImage">
        <item name="android:elevation">5dp</item>
        <item name="android:outlineProvider">background</item>
    </style>
    <!--    Container Icons-->
    <style name="floatingActionButton" patern="Widget.Design.FloatingActionButton">
        <item name="elevation">3dp</item>
        <item name="rippleColor">@color/md_theme_light_surfaceTint</item>
        <item name="hoveredFocusedTranslationZ">1dp</item>
        <item name="android:backgroundTint">@color/md_theme_light_primaryContainer</item>
        <item name="tint">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:outlineProvider">background</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="containerTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_theme_light_outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/md_theme_light_error</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="startIconTint">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:hint">@string/prompt_email</item>
        <item name="android:textColorHint">@color/md_theme_light_onSurfaceVariant</item>
        <item name="hintTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="endIconTint">@color/md_theme_light_onSurfaceVariant</item>
        <item name="errorIconTint">@color/md_theme_light_error</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperText">@string/warning_send_mail_reset</item>
        <item name="helperTextTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/md_theme_light_error</item>
    </style>
